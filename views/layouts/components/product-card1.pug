      .col-sm-6.col-md-8.col-lg-9.p-b-50
        .flex-sb-m.flex-w.p-b-35
          .flex-w
        .row
         each row, index in product      
          .col-sm-12.col-md-6.col-lg-4.p-b-50
            .block2
              .block2-img.wrap-pic-w.of-hidden.pos-relative.block2-labelnew
                img(src="static/uploads/" + row.Image, alt="IMG-PRODUCT")
                .block2-overlay.trans-0-4
                  a.block2-btn-addwishlist.hov-pointer.trans-0-4(href="#")
                    i.icon-wishlist.icon_heart_alt(aria-hidden="true")
                    i.icon-wishlist.icon_heart.dis-none(aria-hidden="true")
                  .block2-btn-addcart.w-size1.trans-0-4
                    a.button.flex-c-m.size1.bg4.bo-rad-23.hov1.s-text1.trans-0-4(href=`/add-Cart${row.ProductId}`).
                      
                      Add to Cart
                      
              .block2-txt.p-t-20
                a.block2-name.dis-block.s-text3.p-b-5(href=`/product-detail${row.ProductId}`).
                  
                 #{row.ProductName}
                  
                span.block2-price.m-text6.p-r-5.
                  
                 INR #{row.ProductPrice}
script.
  let url;
  url = new URL(location.href);

  function onPriceRangeChange(e){
    url.searchParams.set('priceRange', e.target.value);
    document.querySelector("#value-upper").innerText = e.target.value;
  }

  function onSortOrderChange(e){
    url.searchParams.set('order', e.target.value);
  }

  function onCategoryChange(category){
    url.searchParams.set('category', category);
    window.location.href = url.href;
  }

  function applyFilter(){
    window.location.href = url.href;
  }


  